<section class="main-section">
  <div class="main-section-title-wrapper">
    <h2>Items</h2>
    <a href="/Items/add" class="btn">+ Add Item</a>
  </div>
  <div class="main-shop-row">
    <div class="col-md-12 w-100">
      <div class="table-responsive w-100">
        <table class="table table-striped table-bordered table-hover w-100">
          <thead class="thead-dark">
            <tr class="text-center">
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Price</th>
              <th>Category</th>
              <th>Published</th>
              <th>Remove</th>
            </tr>
          </thead>
          <tbody>
            {{#each data.Items}}
              <tr>
                <td class="text-center col-md-1">{{id}}</td>
                <td class="text-left col-md-8">{{title}}</td>
                <td class="text-center col-md-3">{{#formatDate
                    postDate
                  }}{{/formatDate}}</td>
                <td class="text-center col-md-2">${{price}}</td>
                <td class="text-center col-md-1"><a
                    href="/items?category={{category}}"
                  >{{category}}</a></td>
                <td class="text-center col-md-1">{{#if
                    published
                  }}Yes{{else}}No{{/if}}</td>
                <td class="text-center col-md-1">
                  <a
                    href="/items/delete/{{id}}"
                    class="btn btn-danger"
                  >Remove</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{#unless items}}
        <div class="col-md-12 text-center mt-4">
          <strong class="text-danger">{{message}}</strong>
        </div>
      {{/unless}}
    </div>
  </div>
</section>